#:kivy 1.8.0
<CntrlLoco>:
        #bind the size to widgets size

        canvas.before:
                Color:
                        rgba: 0.4, 0.4, 0.4, 1
                Rectangle:
                        size: self.size

                        pos: self.pos

        BoxLayout:
                id:"train_2"
                orientation: "horizontal"
                padding: 10
                Label:
                        size_hint_x: 0.3
                        id: label
                        color: [0.7,0.7,0.7,1]
                        font_size: 70
                        text: root.adress
                        #value: 30
                        #canvas.before:
                        #        Color:
                        #                rgba: 0, 1, 0, 1
                        #        Rectangle:
                        #                size: self.width, self.height * ( self.value / 100)
                        #                pos: self.pos
                BoxLayout:
                        orientation: "vertical"
                        BoxLayout:
                                orientation:"horizontal"
                                size_hint_y: 0.3
                                ToggleButton:
                                        text:"Vorw채rts"
                                        on_state:
                                                if self.state == 'down': self.text='R체ckw채rts'
                                                if self.state == 'normal': self.text='Vorw채rts'
                                ToggleButton:
                                        text:"Funktion"
                        BoxLayout:
                                orientation:"horizontal"
                                Button:
                                        font_size: 70
                                        text: "-"
                                        background_color: [1,0.5,0.5,1]
                                        on_press: slider.value =slider.value - 5
                                Slider:
                                        size_hint_x: None
                                        width: 300
                                        value: 30
                                        id: slider
                                        on_value:
                                                if self.value>self.max: self.value=self.max
                                                if self.value<self.min: self.value=self.min
                                                #label.value = self.value
                                        canvas.before:
                                                Color:
                                                        rgba: 0, 1, 0, 1
                                                Rectangle:
                                                        size: self.width * ( self.value / 100) , self.height
                                                        pos: self.pos
                                Button:
                                        font_size: 70
                                        text: "+"
                                        background_color:[0.5,1,0.5,1]
                                        on_press: slider.value = slider.value + 5
<Raildroino>:
        canvas.before:
                Color:
                        rgba: 0.3, 0.3, 0.3, 1
                Rectangle:
                        # this implicitly binds the size of the
                        # rect to the size of the widget
                        size: self.size
                        # self here still refers to the widget as Rectangle is only a
                        # graphics instruction and not a widget
                        pos: self.pos
        id:main
        BoxLayout:
                size: root.size
                pos: root.pos
                orientation:"vertical"
                id: main_layout

